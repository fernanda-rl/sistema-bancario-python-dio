class ContaBancaria:
    LIMITE_SAQUE = 500
    LIMITE_SAQUES_DIARIOS = 3

    def __init__(self, saldo_inicial=1000):
        self.saldo = saldo_inicial
        self.saques_realizados = 0
        self.extrato = []

    def depositar(self, valor):
        print("\n========== DEPÓSITO ==========")
        if valor > 0:
            self.saldo += valor
            self.extrato.append(f"Depósito de R$ {valor:.2f}")
            print(f"Depósito realizado com sucesso!\nSaldo atual: R$ {self.saldo:.2f}")
        else:
            print("Digite um valor válido para depósito.")

    def sacar(self, valor):
        print("\n========== SAQUE ==========")
        if self.saques_realizados >= self.LIMITE_SAQUES_DIARIOS:
            print("Você atingiu o limite de saques diários.")
            return

        if valor <= 0:
            print("Digite um valor válido para saque.")
            return

        if valor > self.saldo:
            print("Saldo insuficiente para saque.")
            return

        if valor > self.LIMITE_SAQUE:
            print(f"O limite por saque é de R$ {self.LIMITE_SAQUE:.2f}.")
            return

        self.saldo -= valor
        self.saques_realizados += 1
        self.extrato.append(f"Saque de R$ {valor:.2f}")
        print(f"Saque realizado com sucesso!\nSaldo atual: R$ {self.saldo:.2f}")

    def mostrar_extrato(self):
        print("\n========== EXTRATO ==========")
        if not self.extrato:
            print("Não houve movimentações recentes.")
        else:
            for mov in self.extrato:
                print(mov)
        print(f"Saldo atual: R$ {self.saldo:.2f}")


def menu():
    conta = ContaBancaria()

    while True:
        print("\n===== Seja bem-vindo ao sistema bancário DIO! =====")
        print("[1] Saque")
        print("[2] Depósito")
        print("[3] Extrato")
        print("[4] Sair")

        try:
            opcao = int(input("Digite a opção desejada: "))
        except ValueError:
            print("Opção inválida! Digite apenas números.")
            continue

        if opcao == 1:
            valor = float(input("Digite o valor do saque: "))
            conta.sacar(valor)
        elif opcao == 2:
            valor = float(input("Digite o valor do depósito: "))
            conta.depositar(valor)
        elif opcao == 3:
            conta.mostrar_extrato()
        elif opcao == 4:
            print("Obrigada por escolher o sistema bancário DIO! Até mais!")
            break
        else:
            print("Opção inválida, tente novamente.")


if __name__ == "__main__":
    menu()
